#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/outputs.h>

#define _DEFAULT 0
#define _GAME 1
#define _LOWER 2
#define _RAISE 3
#define _SYM 4
#define _NUM 5
#define none_layer 15

&lt {
    tapping-term-ms = <200>;
};

// TO ADD:
// MOD+?+<ijkl> support for ALT+arrow

/ {
    keymap {
        compatible = "zmk,keymap";

        _DEFAULT {
// ------------------------------------------------------------------------------------------------------------
// |       |     |     |      |      |      |                   |      |       |       |      |       |       |
// |  TAB  |  Q  |  W  |  E   |  R   |  T   |                   |  Y   |  U    |  I    |  O   |   P   | BSLH  |
// | SHIFT |  A  |  S  |  D   |  F   |  G   |                   |  H   |  J    |  K    |  L   |   ;   |   '   |
// |  CTRL |  Z  |  X  |  C   |  V   |  B   |  MUTE  |  |       |  N   |  M    |  ,    |  .   |   /   | ESC |
//               | GUI | ALT  | LOWER| RAISE| NUMPAD |  | LOWER |BKSPC | SPACE | ENTER | NONE |
            bindings = <
&none       &none       &none       &none       &none       &none                               &none      &none          &none       &none       &none       &none
&kp TAB     &kp Q       &kp W       &kp E       &kp R       &kp T                               &kp Y      &kp U          &kp I       &kp O       &kp P       &kp BSLH
&kp LSHFT   &kp A       &kp S       &kp D       &kp F       &kp G                               &kp H      &kp J          &kp K       &kp L       &kp SEMI    &lt _NUM SQT
&kp LCTRL   &kp Z       &kp X       &kp C       &kp V       &kp B       &kp C_MUTE  &tog _GAME  &kp N      &kp M          &kp COMMA   &kp DOT     &kp FSLH    &lt _SYS ESC
                        &none       &kp LALT    &mo _LOWER  &mo _NUM    &none       &none       &mt LGUI BSPC &lt _RAISE SPACE &mt _SYM RET &none 
            >;

            sensor-bindings = <&inc_dec_kp C_VOL_DN C_VOL_UP &inc_dec_kp C_PREV C_NEXT>;
        };

        _GAME {
// ------------------------------------------------------------------------------------------------------------
// |        |           |           |           |           |           |                       |           |           |           |           |           |           |
// |        |           |           |           |           |           |                       |           |           |           |           |           |           |
// |        |           |           |           |           |           |                       |           |           |           |           |           |           |
// |        |           |           |           |           |           |           ||          |           |           |           |           |           |           |
//                      |           |           |           |           |           ||          |           |           |           |           |                       
            bindings = <
&none       &kp N1      &kp N2      &kp N3      &kp N4      &kp N5                              &kp N6      &kp N7       &kp N8      &kp N9      &kp N0      &tog 5
&kp TAB     &kp Q       &kp W       &kp E       &kp R       &kp T                               &kp Y       &kp U        &kp I       &kp O       &kp P       &kp BSLH
&kp LSHFT   &kp A       &kp S       &kp D       &kp F       &kp G                               &kp H       &kp J        &kp K       &kp L       &kp SEMI    &kp SQT
&kp LCTRL   &kp Z       &kp X       &kp C       &kp V       &kp B       &kp ESC     &tog _GAME  &kp N       &kp M        &kp COMMA   &kp DOT     &kp FSLH    &kp ESC 
                        &kp LGUI    &kp LALT    &lt _LOWER SPACE &mo 2  &mo 4       &none       &kp BSPC    &kp SPACE    &kp RET     &none 
            >;

            sensor-bindings = <&inc_dec_kp C_VOL_DN C_VOL_UP &inc_dec_kp C_PREV C_NEXT>;
        };

        _LOWER {
// ------------------------------------------------------------------------------------------------------------
// |        |           |           |           |           |           |                       |           |           |           |           |           |           |
// |  ESC   |   SPACE   |   ENTER   |   BKSPC   |    DEL    |   LC(T)   |                       |    PGUP   |           |     ^     |           |           |           |
// |   o    |  CTRL A   |  CTRL S   |    NUM    |   LC(F)   |           |                       |    HOME   |     <     |     V     |     >     |    END    |           |
// |   o    |    UNDO   |    CUT    |   COPY    |   PASTE   |           |                       |    PGDN   |           |           |   LC(.)   |           |           |
//                      |     o     |     o     |           |           |           ||          |    DEL    |           |           |           |                       
            bindings = <
&none       &none       &none       &none       &none       &none                               &none       &none       &none       &none       &none       &none
&kp ESC     &kp SPACE   &kp RET     &kp BSPC    &kp DEL     &kp LC(T)                           &kp PG_UP   &none       &kp UP      &none       &kp LC(P)   &none       
&trans      &kp LC(A)   &kp LC(S)   &none       &kp LC(F)   &none                               &kp HOME    &kp LEFT    &kp DOWN    &kp RIGHT   &kp END     &none       
&trans      &kp LC(Z)   &kp LC(X)   &kp LC(C)   &kp LC(V)   &none       &kp C_MUTE  &none       &kp PG_DN   &none       &none       &kp LC(DOT) &none       &none
                        &trans      &trans      &none       &none       &none       &none       &kp DEL   &kp LA(SPACE) &none       &none
            >;

            sensor-bindings = <&inc_dec_kp C_VOL_DN C_VOL_UP &inc_dec_kp C_PREV C_NEXT>;
        };

        _RAISE {
// ------------------------------------------------------------------------------------------------------------
// |        |           |           |           |           |           |                       |           |           |           |           |           |           |
// |   o    |           |           |           |           |   Next    |                       |     ~     |     (     |     )     |     _     |           |           |
// |   o    |           |           |           |           |   Play    |                       |     `     |     [     |     ]     |     +     |     -     |           |
// |   o    |           |           |           |           |   Prev    |           ||          |           |     {     |     }     |     =     |           |           |
//                      |     o     |     o     |           |           |           ||          |           |           |           |           |                       
            bindings = <
&none       &none       &none       &none       &none       &none                               &none       &none       &none       &none       &none       &none
&trans      &none       &none       &none       &none       &none                               &kp TILDE   &kp LPAR    &kp RPAR    &kp UNDER   &none       &none
&trans      &none       &none       &none       &none       &none                               &kp GRAVE   &kp LBKT    &kp RBKT    &kp PLUS    &kp MINUS   &none
&trans      &none       &none       &none       &none       &none       &none       &none       &none       &kp LBRC    &kp RBRC    &kp EQUAL   &none       &none
                        &trans      &trans      &none       &none       &none       &none       &trans      &trans      &trans      &none
            >;

            sensor-bindings = <&inc_dec_kp C_VOL_DN C_VOL_UP &inc_dec_kp C_PREV C_NEXT>;
        };

        _SYM {
// ------------------------------------------------------------------------------------------------------------
// |   o    |           |           |           |           |           |                       |           |           |           |           |           |           |
// |   o    |           |           |           |           |           |                       |           |           |           |           |           |           |
// |   o    |     !     |     @     |     #     |     $     |     %     |                       |     ^     |     &     |     *     |           |           |           |
// |   o    |           |           |           |           |           |           ||          |           |           |           |           |           |           |
//                      |     o     |     o     |           |           |           ||          |           |           |           |           |                       
            bindings = <
&trans      &none       &none       &none       &none       &none                               &none       &none       &none       &none       &none       &none
&trans      &none       &none       &none       &none       &none                               &none       &none       &none       &none       &none       &none
&trans      &kp EXCL    &kp AT      &kp HASH    &kp DOLLAR  &kp PERCENT                         &kp CARET   &kp AMPS    &kp STAR    &none       &none       &none
&trans      &none       &none       &none       &none       &none       &none       &none       &none       &none       &none       &none       &none       &none
                        &trans      &trans      &none       &none       &none       &none       &none       &none       &none       &none
            >;

            sensor-bindings = <&inc_dec_kp C_VOL_DN C_VOL_UP &inc_dec_kp C_PREV C_NEXT>;
        };

        _NUM {
// ------------------------------------------------------------------------------------------------------------
// |   o    |           |           |           |           |           |                       |           |           |           |           |           |           |
// |   o    |           |           |           |           |           |                       |           |     7     |     8     |     9     |           | TOG GAME  |
// |   o    |           |           |           |           |           |                       |           |     4     |     5     |     6     |           |           |
// |   o    |     .     |           |           |           |           |           ||          |           |     1     |     2     |     3     |           |           |
//                      |     o     |     o     |           |           |           ||          |           |     0     |           |     .     |                       
            bindings = <
&trans      &none       &none       &none       &none       &none                               &none       &none       &none         &none           &none        &none        
&trans      &kp F1      &kp F4      &kp F7      &kp F10     &kp C_PREV                          &none       &kp N7      &kp N8        &kp N9          &none        &tog 5
&trans      &kp F2      &kp F5      &kp F8      &kp F11     &kp C_PP                            &none       &kp N4      &kp N5        &kp N6          &none        &none
&trans      &kp F3      &kp F6      &kp F9      &kp F12     &kp C_NEXT  &none       &none       &none       &kp N1      &kp N2        &kp N3          &none        &none
                        &trans      &trans      &none       &none       &none       &none       &none       &kp N0      &none         &none        
            >;

            sensor-bindings = <&inc_dec_kp C_VOL_DN C_VOL_UP &inc_dec_kp C_PREV C_NEXT>;
        };

        _SYS {
// ------------------------------------------------------------------------------------------------------------
// |        |           |           |           |           |           |                       |           |           |           |           |           |           |
// |        |           |           |           |           |           |                       |           |           |           |           |           |           |
// |        |           |           |           |           |           |                       |           |           |           |           |           |           |
// |        |           |           |           |           |           |           ||          |           |           |           |           |           |           |
//                      |           |           |           |           |           ||          |           |           |           |           |                       
            bindings = <
&none       &none       &none       &none       &none       &none                               &none       &none       &none       &none       &none       &none
&trans      &bt BT_PRV  &bt BT_NXT  &none       &none       &bt BT_CLR                          &none       &none       &none       &none       &none       &none
&trans      &bt BT_SEL 0 &bt BT_SEL 1 &none     &none       &none                               &none       &none       &none       &none       &none       &none
&trans      &out OUT_USB &out OUT_BLE &none     &none       &none       &none       &none       &none       &none       &none       &none       &none       &none
                        &trans      &trans      &none       &none       &none       &none       &none       &none       &none       &none
            >;

            sensor-bindings = <&inc_dec_kp C_VOL_DN C_VOL_UP &inc_dec_kp C_PREV C_NEXT>;
        };

        old_game_layer {
// ------------------------------------------------------------------------------------------------------------
// |        |           |           |           |           |           |                       |           |           |           |           |           |           |
// |        |           |           |           |           |           |                       |           |           |           |           |           |           |
// |        |           |           |           |           |           |                       |           |           |           |           |           |           |
// |        |           |           |           |           |           |           ||          |           |           |           |           |           |           |
//                      |           |           |           |           |           ||          |           |           |           |           |                       
            bindings = <
&kp ESC     &kp N1      &kp N2      &kp N3      &kp N4      &kp N5                              &kp N6      &kp N7       &kp N8      &kp N9      &kp N0      &tog 5
&kp TAB     &kp Q       &kp W       &kp E       &kp R       &kp T                               &kp Y       &kp U        &kp I       &kp O       &kp P       &kp BSLH
&kp LSHFT   &kp A       &kp S       &kp D       &kp F       &kp G                               &kp H       &kp J        &kp K       &kp L       &kp SEMI    &kp SQT
&kp LCTRL   &kp Z       &kp X       &kp C       &kp V       &kp B       &kp C_MUTE  &kp C_PP    &kp N       &kp M        &kp COMMA   &kp DOT     &kp FSLH    &none
                        &kp LGUI    &kp LALT    &kp SPACE   &mo 2       &mo 4       &none       &kp BSPC    &kp SPACE    &kp RET     &none 
            >;

            sensor-bindings = <&inc_dec_kp C_VOL_DN C_VOL_UP &inc_dec_kp C_PREV C_NEXT>;
        };

        none_layer {
// ------------------------------------------------------------------------------------------------------------
// |        |           |           |           |           |           |                       |           |           |           |           |           |           |
// |        |           |           |           |           |           |                       |           |           |           |           |           |           |
// |        |           |           |           |           |           |                       |           |           |           |           |           |           |
// |        |           |           |           |           |           |           ||          |           |           |           |           |           |           |
//                      |           |           |           |           |           ||          |           |           |           |           |                       
            bindings = <
&none       &none       &none       &none       &none       &none                               &none       &none       &none       &none       &none       &none
&trans      &none       &none       &none       &none       &none                               &none       &none       &none       &none       &none       &none
&trans      &none       &none       &none       &none       &none                               &none       &none       &none       &none       &none       &none
&trans      &none       &none       &none       &none       &none       &none       &none       &none       &none       &none       &none       &none       &none
                        &trans      &trans      &none       &none       &none       &none       &none       &none       &none       &none
            >;

            sensor-bindings = <&inc_dec_kp C_VOL_DN C_VOL_UP &inc_dec_kp C_PREV C_NEXT>;
        };
    };
};
