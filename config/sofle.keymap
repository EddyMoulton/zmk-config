#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>

#define numpad_layer 3
#define raise_forward_layer 4
#define game_layer 5
#define none_layer 15

/ {
    keymap {
        compatible = "zmk,keymap";

        default_layer {
// ------------------------------------------------------------------------------------------------------------
// |  ESC  |  1  |  2  |  3   |  4   |  5   |                   |  6   |  7    |  8    |  9   |   0   |       |
// |  TAB  |  Q  |  W  |  E   |  R   |  T   |                   |  Y   |  U    |  I    |  O   |   P   | BSLH  |
// | SHIFT |  A  |  S  |  D   |  F   |  G   |                   |  H   |  J    |  K    |  L   |   ;   |   '   |
// |  CTRL |  Z  |  X  |  C   |  V   |  B   |  MUTE  |  |       |  N   |  M    |  ,    |  .   |   /   | ENTER |
//               | GUI | ALT  | LOWER| RAISE| NUMPAD |  | LOWER |BKSPC | SPACE | ENTER | NONE |
            bindings = <
&kp ESC     &kp N1      &kp N2      &kp N3      &kp N4      &kp N5                              &kp N6     &kp N7       &kp N8      &kp N9      &kp N0      &none
&kp TAB     &kp Q       &kp W       &kp E       &kp R       &kp T                               &kp Y      &kp U        &kp I       &kp O       &kp P       &kp BSLH
&kp LSHFT   &kp A       &kp S       &kp D       &kp F       &kp G                               &kp H      &kp J        &kp K       &kp L       &kp SEMI    &kp SQT
&kp LCTRL   &kp Z       &kp X       &kp C       &kp V       &kp B       &kp C_MUTE  &kp C_PP    &kp N      &kp M        &kp COMMA   &kp DOT     &kp FSLH    &none
                        &kp LGUI    &kp LALT    &mo 1       &mo 2       &mo 3       &none       &kp BSPC   &kp SPACE    &kp RET     &none 
            >;

            sensor-bindings = <&inc_dec_kp C_VOL_DN C_VOL_UP &inc_dec_kp C_PREV C_NEXT>;
        };

        lower_layer {
// ------------------------------------------------------------------------------------------------------------
// |   o    |           |           |           |           |           |                       |           |           |           |           |           |           |
// |   o    |     ~     |    `      |           |           |   LC(T)   |                       |    PGUP   |           |     ^     |           |           |           |
// |   o    |  CTRL A   |  CTRL S   |           |   LC(F)   |           |                       |    HOME   |     <     |     V     |     >     |    END    |           |
// |   o    |    UNDO   |    CUT    |   COPY    |   PASTE   |           |                       |    PGDN   |           |           |   LC(.)   |           |           |
//                      |     o     |     o     |           |           |           ||          |    DEL    |           |           |           |                       
            bindings = <
&trans      &none       &none       &none       &none       &none                               &none       &none       &none       &none       &none       &none
&trans      &kp TILDE   &kp GRAVE   &none       &none       &kp LC(T)                           &kp PG_UP   &none       &kp UP      &none       &kp LC(P)   &none       
&trans      &kp LC(A)   &kp LC(S)   &none       &kp LC(F)   &none                               &kp HOME    &kp LEFT    &kp DOWN    &kp RIGHT   &kp END     &none       
&trans      &kp LC(Z)   &kp LC(X)   &kp LC(C)   &kp LC(V)   &none       &kp C_MUTE  &none       &kp PG_DN   &none       &none       &kp LC(DOT) &none       &none
                        &trans      &trans      &none       &none       &none       &none       &kp DEL   &kp LA(SPACE) &none       &none
            >;

            sensor-bindings = <&inc_dec_kp C_VOL_DN C_VOL_UP &inc_dec_kp C_PREV C_NEXT>;
        };

        raise_layer {
// ------------------------------------------------------------------------------------------------------------
// |   o    |           |           |           |           |           |                       |           |           |           |           |           |           |
// |   o    |           |           |           |           |           |                       |           |     (     |     )     |     _     |           |           |
// |   o    |           |           |           |           |           |                       |           |     [     |     ]     |     +     |     -     |           |
// |   o    |           |           |           |           |           |           ||          |           |     {     |     }     |     =     |           |           |
//                      |     o     |     o     |           |           |           ||          |           |           |           |           |                       
            bindings = <
&trans      &none       &none       &none       &none       &none                               &none       &none       &none       &none       &none       &none
&trans      &kp F1      &kp F4      &kp F7      &kp F10     &none                               &none       &kp LPAR    &kp RPAR    &kp UNDER   &none       &none
&trans      &kp F2      &kp F5      &kp F8      &kp F11     &none                               &none       &kp LBKT    &kp RBKT    &kp PLUS    &kp MINUS   &none
&trans      &kp F3      &kp F6      &kp F9      &kp F12     &none       &none       &none       &none       &kp LBRC    &kp RBRC    &kp EQUAL   &none       &none
                        &trans      &trans      &none       &none       &none       &none       &none       &mo 4       &none       &none
            >;

            sensor-bindings = <&inc_dec_kp C_VOL_DN C_VOL_UP &inc_dec_kp C_PREV C_NEXT>;
        };

        raise_forward_layer {
// ------------------------------------------------------------------------------------------------------------
// |   o    |           |           |           |           |           |                       |           |           |           |           |           |           |
// |   o    |           |           |           |           |           |                       |           |           |           |           |           |           |
// |   o    |     !     |     @     |     #     |     $     |     %     |                       |     ^     |     &     |     *     |           |           |           |
// |   o    |           |           |           |           |           |           ||          |           |           |           |           |           |           |
//                      |     o     |     o     |           |           |           ||          |           |           |           |           |                       
            bindings = <
&trans      &none       &none       &none       &none       &none                               &none       &none       &none       &none       &none       &none
&trans      &none       &none       &none       &none       &none                               &none       &none       &none       &none       &none       &none
&trans      &kp EXCL    &kp AT      &kp HASH    &kp DOLLAR  &kp PERCENT                         &kp CARET   &kp AMPS    &kp STAR    &none       &none       &none
&trans      &none       &none       &none       &none       &none       &none       &none       &none       &none       &none       &none       &none       &none
                        &trans      &trans      &none       &none       &none       &none       &none       &none       &none       &none
            >;

            sensor-bindings = <&inc_dec_kp C_VOL_DN C_VOL_UP &inc_dec_kp C_PREV C_NEXT>;
        };

        numpad_layer {
// ------------------------------------------------------------------------------------------------------------
// |   o    |           |           |           |           |           |                       |           |           |     /     |     *     |     -     |           |
// |   o    |           |           |           |           |   Next    |                       |           |     7     |     8     |     9     |     +     |           |
// |   o    |           |           |    DEL    |   BKSPC   |   Play    |                       |           |     4     |     5     |     6     |           |           |
// |   o    |     .     |           |   SPACE   |   ENTER   |   Prev    |           ||          |           |     1     |     2     |     3     |    RET    |           |
//                      |     o     |     o     |           |           |           ||          |           |     0     |           |     .     |                       
            bindings = <
&trans      &none       &none       &none       &none       &none                               &tog 5      &none       &kp KP_DIVIDE &kp KP_MULTIPLY &kp KP_MINUS &kp KP_NUMLOCK
&trans      &none       &none       &none       &none       &kp C_PREV                          &none       &kp KP_N7   &kp KP_N8     &kp KP_N9       &none        &none
&trans     &kp LC(FSLH) &none       &kp BSPC    &kp DEL     &kp C_PP                            &none       &kp KP_N4   &kp KP_N5     &kp KP_N6       &kp KP_PLUS  &none
&trans      &kp DOT     &none       &kp SPACE   &kp RET     &kp C_NEXT  &none       &none       &none       &kp KP_N1   &kp KP_N2     &kp KP_N3       &kp KP_ENTER &none
                        &trans      &trans      &none       &none       &none       &none       &none       &kp KP_N0   &kp KP_DOT    &none         
            >;

            sensor-bindings = <&inc_dec_kp C_VOL_DN C_VOL_UP &inc_dec_kp C_PREV C_NEXT>;
        };

        game_layer {
// ------------------------------------------------------------------------------------------------------------
// |        |           |           |           |           |           |                       |           |           |           |           |           |           |
// |        |           |           |           |           |           |                       |           |           |           |           |           |           |
// |        |           |           |           |           |           |                       |           |           |           |           |           |           |
// |        |           |           |           |           |           |           ||          |           |           |           |           |           |           |
//                      |           |           |           |           |           ||          |           |           |           |           |                       
            bindings = <
&kp ESC     &kp N1      &kp N2      &kp N3      &kp N4      &kp N5                              &kp N6      &kp N7       &kp N8      &kp N9      &kp N0      &tog 5
&kp TAB     &kp Q       &kp W       &kp E       &kp R       &kp T                               &kp Y       &kp U        &kp I       &kp O       &kp P       &kp BSLH
&kp LSHFT   &kp A       &kp S       &kp D       &kp F       &kp G                               &kp H       &kp J        &kp K       &kp L       &kp SEMI    &kp SQT
&kp LCTRL   &kp Z       &kp X       &kp C       &kp V       &kp B       &kp C_MUTE  &kp C_PP    &kp N       &kp M        &kp COMMA   &kp DOT     &kp FSLH    &none
                        &kp LGUI    &kp LALT    &kp SPACE   &mo 2       &mo 3       &none       &kp BSPC    &kp SPACE    &kp RET     &none 
            >;

            sensor-bindings = <&inc_dec_kp C_VOL_DN C_VOL_UP &inc_dec_kp C_PREV C_NEXT>;
        };

        none_layer {
// ------------------------------------------------------------------------------------------------------------
// |        |           |           |           |           |           |                       |           |           |           |           |           |           |
// |        |           |           |           |           |           |                       |           |           |           |           |           |           |
// |        |           |           |           |           |           |                       |           |           |           |           |           |           |
// |        |           |           |           |           |           |           ||          |           |           |           |           |           |           |
//                      |           |           |           |           |           ||          |           |           |           |           |                       
            bindings = <
&trans      &none       &none       &none       &none       &none                               &none       &none       &none       &none       &none       &none
&trans      &none       &none       &none       &none       &none                               &none       &none       &none       &none       &none       &none
&trans      &none       &none       &none       &none       &none                               &none       &none       &none       &none       &none       &none
&trans      &none       &none       &none       &none       &none       &none       &none       &none       &none       &none       &none       &none       &none
                        &trans      &trans      &none       &none       &none       &none       &none       &none       &none       &none
            >;

            sensor-bindings = <&inc_dec_kp C_VOL_DN C_VOL_UP &inc_dec_kp C_PREV C_NEXT>;
        };
    };
};
